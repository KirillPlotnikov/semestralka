<p id="notice"><%= notice %></p>

<h1>Tasks</h1>
<div class="container text-center ">
<table>
  <thead>
    <tr>
      <th>Deadline at</th>
      <th>Title</th>
      <th>Note</th>
      <th>Is done</th>
      <th>Category</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.deadline_at != nil ? task.deadline_at : "No deadline" %></td>
        <td><%= task.title %></td>
        <td><%= task.note %></td>
        <td><%= task.is_done %></td>
        <td><%= task.category != nil ? task.category.title : "None" %></td>
        <% if task.tags.size != 0 %>
            <% task.tags.each do |tag| %>
              <td><%= tag.title %></td>
            <% end %>
        <% else %>

        <% end %>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Task', new_task_path %>

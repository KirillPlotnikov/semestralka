.container{
  margin-bottom: 50px;
}

.task_deadline_at{
  display: none;
}

h1{
  margin-top: 40px;
  margin-bottom: 30px;
}

.form-check-label{
  font-size: 14px;
  margin-left: 10px;
}

.task_deadline_at{
  margin-top: 10px;
}

.content{
  border: #2E2F30 solid 0.5px;
  border-radius: 5px;
  padding: 20px;
  background-color: #F7F7F7;
}

form .btn{
  width: 150px;
  margin-bottom: 10px;
  font-size: 20px;
  height: 45px;
}

input[type='checkbox'] {
  width:18px;
  height: 18px;
  border-radius:5px;
  border:2px solid #555;
}

.item{
  margin-bottom: 5px;
}

[type="checkbox"]
{
  vertical-align:middle;
}

.container a:last-child{
  margin-left: 5px;

}

.container a{
  margin-left: 5px;
  font-size: 17px;
}

.tags-checks .form-check{
  width:50%;
  float:left;
}

label:not(.form-check-label){
  font-size: 24px;
}

.form-group legend{
  font-size: 24px;
}


@media only screen and (max-width: 576px) {

  .content{
    border: none;
    background-color: white;
    margin-top: 10px;
  }

}
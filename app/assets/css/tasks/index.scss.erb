.container-tasks{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  width: 80%;
  max-width: 2100px;
  margin: 0px auto;
}

[type="checkbox"]
{
  vertical-align:middle;
}

input[type='checkbox'] {
  width:18px;
  height: 18px;
  border-radius:5px;
  border:2px solid #555;
}

.filtering-div{
  display: none;
}

.filtering-div{
  width: 77%;
  max-width: 2100px;
  margin: 0px auto;
  margin-bottom: 10px;
}

.filtering-div select{
  width: 100px;
}

.tags-selection{
  width: 50%;
}

.filtering-div p{
  font-weight: bold;
  font-size: 16px;
  margin: 5px 0;
}

.filtering-div input:first-child{
  margin-left: 0;
}

.filtering-div input{
  margin: 10px;
}

.filtering-div label{
  margin-left: 3px;
}

.tasks-menu{
  width: 77%;
  max-width: 2100px;
  margin: 0px auto;
  margin-bottom: 20px;
}

.tasks-menu a{
  font-size: 18px;
  margin-left: 10px;
  line-height: 40px;
}

.tasks-menu a:first-child{
  font-weight: bold;
  margin-left: 0;
}


h3{
  font-weight: bold;
}

h3:not(:first-child){
  margin-top: 40px;
}

.task-div{
  position: relative;
  border-radius: 10px;
  border: 2px solid;
  border-color: green;
  flex-basis: 32%;
  margin: 10px calc(4% / 6);

  padding: 20px;
}


.form-inline{
  width: auto;
  margin: 0;
  float: right;
}

i {
  margin-left: 3px;
  margin-bottom: 2px;
  border: solid black;
  border-width: 0 2px 2px 0;
  display: inline-block;
  padding: 3px;
  border-color: #2780E3;
}
.down {
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
}

.note{
  position: absolute;
  top: 10px;
  right: 10px;
  font-size: 30px;
}

.note .tooltiptext {
  visibility: hidden;
  width: 80px;
  background-color: black;
  color: #fff;
  text-align: center;
  border-radius: 6px;
  padding: 5px 0;
  font-size: 12px;
  /* Position the tooltip */
  position: absolute;
  z-index: 1;
  right: 105%;
}
.note .tooltiptext::after {
  content: " ";
  position: absolute;
  top: 50%;
  left: 100%;
  margin-top: -5px;
  border-width: 5px;
  border-style: solid;
  border-color: transparent transparent transparent black;
}

.note:hover .tooltiptext {
  visibility: visible;
}



.task-div p{
  font-size: 17px;
}

.task-div a{
  font-size: 20px;
}

.task-links{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
}

h1{
  margin-top: 30px;
  margin-bottom: 30px;
}

@media only screen and (max-width: 992px) {
  .task-div{
    flex-basis: 49%;
    margin: 10px calc(2% / 4);

  }

}

@media only screen and (max-width: 576px) {

  .task-div{
    flex-basis: 100%;
  }

}


@media only screen and (min-width: 1900px) {

  .task-div{
    flex-basis: 24%;
  }

}
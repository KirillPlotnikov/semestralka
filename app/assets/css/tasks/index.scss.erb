.container-tasks{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  width: 80%;
  max-width: 2100px;
  margin: 0px auto;
}

.task-div{
  position: relative;
  border-radius: 10px;
  border: 2px solid;
  border-color: green;
  flex-basis: 32%;
  margin: 10px calc(4% / 6);

  padding: 20px;
}

.note{
  position: absolute;
  top: 10px;
  right: 10px;
  font-size: 30px;
}

.note .tooltiptext {
  visibility: hidden;
  width: 80px;
  background-color: black;
  color: #fff;
  text-align: center;
  border-radius: 6px;
  padding: 5px 0;
  font-size: 12px;
  /* Position the tooltip */
  position: absolute;
  z-index: 1;
  right: 105%;
}
.note .tooltiptext::after {
  content: " ";
  position: absolute;
  top: 50%;
  left: 100%;
  margin-top: -5px;
  border-width: 5px;
  border-style: solid;
  border-color: transparent transparent transparent black;
}

.note:hover .tooltiptext {
  visibility: visible;
}



.task-div p{
  font-size: 17px;
}

.task-div a{
  font-size: 20px;
}

.task-links{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
}

h1{
  margin-top: 30px;
  margin-bottom: 30px;
}

@media only screen and (max-width: 992px) {
  .task-div{
    flex-basis: 49%;
    margin: 10px calc(2% / 4);

  }

}

@media only screen and (max-width: 576px) {

  .task-div{
    flex-basis: 100%;
  }

}


@media only screen and (min-width: 1900px) {

  .task-div{
    flex-basis: 24%;
  }

}
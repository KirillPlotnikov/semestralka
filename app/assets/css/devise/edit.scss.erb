h1{
  margin-bottom:30px;
}



.content{
  border: #2E2F30 solid 0.5px;
  border-radius: 5px;
  padding: 20px;
  background-color: #F7F7F7;
  margin-top: 50px;
}

form .btn{
  width: 150px;
  margin-bottom: 10px;
  font-size: 20px;
  height: 45px;
}

.devise-link{
  font-size: 17px;
}

small{
  font-size: 14px;
}

@media only screen and (max-width: 576px) {

  .content{
    border: none;
    background-color: white;
    margin-top: 10px;
  }

  h1{
    margin-top: 20px;
    margin-bottom: 20px;
  }
}